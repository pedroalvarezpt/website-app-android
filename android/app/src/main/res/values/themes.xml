<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Main App Theme -->
    <style name="Theme.PlantaLivre" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/plantalivre_primary</item>
        <item name="colorPrimaryVariant">@color/plantalivre_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/plantalivre_accent</item>
        <item name="colorSecondaryVariant">@color/plantalivre_light</item>
        <item name="android:statusBarColor">@color/plantalivre_primary</item>
        <item name="android:navigationBarColor">@color/plantalivre_primary</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
    
    <!-- Splash Screen Theme -->
    <style name="Theme.PlantaLivre.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/plantalivre_primary</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.PlantaLivre</item>
        <!-- Fallback for older Android versions -->
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/plantalivre_primary</item>
        <item name="android:navigationBarColor">@color/plantalivre_primary</item>
    </style>
</resources>
